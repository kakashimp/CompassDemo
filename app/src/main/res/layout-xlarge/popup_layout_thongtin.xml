<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/lnLayout1"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:background="@color/white"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:background="@drawable/white_grey_border_bottom"
        android:layout_width="match_parent"
        android:layout_height="50dp">

    <TextView
        android:textStyle="bold|italic"
        android:layout_centerInParent="true"
        android:textSize="25sp"
        android:textColor="#000"
        android:text="Hướng dẫn sử dụng"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    </RelativeLayout>
    <TextView
        android:textStyle="italic"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_margin="11dp"
        android:padding="2dp"
        android:textSize="30sp"
        android:textColor="@color/black"
        android:text="@string/popupthongtin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_margin="11dp"
        android:textColor="@color/black"
        android:gravity="center"
        android:layout_gravity="center"
        android:text="Ứng dụng có thể tra cứu dễ dàng hướng tốt xấu dựa vào năm sinh của người sử dụng để sử dụng chức năng này chỉ cần click vào biểu tượng bên phải cuối màn hình rồi nhập năm sinh của bạn và tra cứu một cách nhanh chóng. "
        android:layout_width="wrap_content"
        android:textStyle="italic"
        android:textSize="30sp"
        android:layout_height="wrap_content" />
    <TextView
        android:textSize="30sp"
        android:layout_margin="11dp"
        android:textColor="@color/black"
        android:gravity="center"
        android:layout_gravity="center"
        android:text="Cảm ơn các bạn đã sử dụng ứng dung !."
        android:layout_width="wrap_content"
        android:textStyle="italic"

        android:layout_height="wrap_content" />
    <RelativeLayout
        android:background="@drawable/white_grey_border_top"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <Button
            android:onClick="setContentView"
            android:layout_marginTop="10dp"
            android:background="@drawable/white_rounded_button"
            android:layout_centerInParent="true"
            android:text="Thoát"
            android:id="@+id/thoat"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>
</LinearLayout>